@model EntityLayer.Concrete.Rewiew
@{
    ViewData["Title"] = "RewiewsAdd";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div style="margin-left:22%">
    <h1>New Rewiew</h1>

    @using (Html.BeginForm("RewiewAdd", "Admin", FormMethod.Post))
    {
        @Html.LabelFor(x=>x.Id)
        @Html.TextBoxFor(x=>x.Id,new{@class="form-control"})

        @Html.LabelFor(x=>x.Title)
        @Html.TextBoxFor(x=>x.Title,new{@class="form-control"})

        @Html.LabelFor(x=>x.Description)
        @Html.TextBoxFor(x=>x.Description,new{@class="form-control"})

        @Html.LabelFor(x=>x.Writer)
        @Html.TextBoxFor(x=>x.Writer,new{@class="form-control"})

        @Html.LabelFor(x=>x.Star)
        @Html.TextBoxFor(x=>x.Star,new{@class="form-control"})

        @Html.LabelFor(x=>x.Date)
        @Html.TextBoxFor(x=>x.Date,new{@class="form-control"})

        @Html.LabelFor(x=>x.MovieId)
        @Html.TextBoxFor(x=>x.MovieId,new{@class="form-control"})

        <button class="btn btn-success">Add</button>
    }
</div>