@using EntityLayer.Concrete
@model List<Movie>
@{
    ViewData["Title"] = "MovieList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div style="margin-left:22%">
    <h2 class="text-center">FİLMLER</h2>
    <a href="/Admin/MoviesAdd" class="btn btn-success">Yeni Kayıt</a>
    <table class="table table-bordered mt-3">
        <tr>
            <th>Id</th>
            <th>İsim</th>
            <th>Oyuncular</th>
            <th>Yönetmen</th>
            <th>Resim</th>
            <th>Puan</th>
            <th>Süre</th>
            <th>Genel Bakış</th>
            <th>Çıkış Tarihi</th>
            <th>Güncelle</th>
            <th>Sil</th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name </td>
                <td>@item.Cast</td>
                <td>@item.Director</td>
                <td>@item.Image</td>
                <td>@item.Star</td>
                <td>@item.RunTime</td>
                <td>@item.Overview</td>
                <td>@item.Date</td>
                <td><a href="/Admin/MovieGet/@item.Id" class="btn btn-primary">Güncelle</a></td>
                <td>
                    <a href="/Admin/MovieRemove/@item.Id" class="btn btn-danger"
                       onclick="return confirm('Bu kullanıcıyı silmek istediğinizden emin misiniz?')">Sil</a>
                </td>
            </tr>
        }

    </table>
</div>

