@model EntityLayer.Concrete.Movie
@{
    ViewData["Title"] = "MovieGet";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div style="margin-left:22%">
    <h1>Guncelle</h1>

    @using (Html.BeginForm("MovieUpdate", "Admin", FormMethod.Post))
    {
        @Html.LabelFor(x=>x.Id)
        @Html.TextBoxFor(x=>x.Id,new{@class="form-control",@readonly="readonly"})

        @Html.LabelFor(x=>x.Name)
        @Html.TextBoxFor(x=>x.Name,new{@class="form-control"})

        @Html.LabelFor(x=>x.Genre)
        @Html.TextBoxFor(x=>x.Genre,new{@class="form-control"})

        @Html.LabelFor(x=>x.Cast)
        @Html.TextBoxFor(x=>x.Cast,new{@class="form-control"})
        <button class="btn btn-success">Güncelle</button>
    }
</div>