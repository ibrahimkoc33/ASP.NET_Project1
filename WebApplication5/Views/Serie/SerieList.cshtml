@using EntityLayer.Concrete
@model List<Serie>
@{
    ViewData["Title"] = "SerieList";
    Layout = "~/Views/Shared/MovieLayout.cshtml";
}
<!DOCTYPE html>
<!--[if IE 7]>
<html class="ie ie7 no-js" lang="en-US">
<![endif]-->
<!--[if IE 8]>
<html class="ie ie8 no-js" lang="en-US">
<![endif]-->
