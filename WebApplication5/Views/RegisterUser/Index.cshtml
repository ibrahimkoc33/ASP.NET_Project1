<body>

    <div class="log-form">
        <h2>Kayıt Ol</h2>
        @using (Html.BeginForm("Index", "RegisterUser", FormMethod.Post))
        {
            <div class="form-row">
                <label>
                    @Html.TextBoxFor(x => x.Name, new { @class = "form-control", placeholder = "Adınızı girin" })
                    <span asp-validation-for="@Model.Name" class="text-danger" style="color: red;"></span>
                </label>
            </div>
            <div class="form-row">
                <label>
                    @Html.TextBoxFor(x => x.Username, new { @class = "form-control", placeholder = "Kullanıcı adınızı girin"  })
                    <span asp-validation-for="@Model.Username" class="text-danger" style="color: red;"></span>
                </label>
            </div>

            <div class="form-row">
                <label>
                    @Html.TextBoxFor(x => x.Mail, new { @class = "form-control", placeholder = "Mail adresi girin"  })
                    <span asp-validation-for="@Model.Mail" class="text-danger" style="color: red;"></span>
                </label>
            </div>
            <div class="form-row">
                <label>
                    @Html.PasswordFor(x => x.Password, new { @class = "form-control", placeholder = "Şifrenizi girin"  })
                    <span asp-validation-for="@Model.Password" class="text-danger" style="color: red;"></span>
                </label>
            </div>
            <div class="form-row">
                <label>
                    @Html.PasswordFor(x => x.ConfirmPassword, new { @class = "form-control", placeholder = "Şifrenizi tekrar girin"   })
                    <span asp-validation-for="@Model.ConfirmPassword" class="text-danger" style="color: red;"></span>
                </label>
            </div>
            <button type="submit" class="btn">Kayıt Ol</button>
            <a class="forgot" href="#">Giriş Yap</a>
            <div class="text-danger" style="color: red;" asp-validation-summary="ModelOnly">
            </div>
        }
    </div>
</body>
